{
  "compilerOptions": {
    "strict": true,
    "types": ["@types/bun"],
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@skoly/openauth": ["../../core/src"],
      "@skoly/openauth/*": ["../../core/src/*"]
    }
  },
  "include": [".", "../../core/src/**/*"]
}
