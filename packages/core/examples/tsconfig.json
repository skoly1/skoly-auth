{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["express", "node", "vitest"]
  },
  "include": ["./**/*.ts", "../src/**/*.ts"]
}
