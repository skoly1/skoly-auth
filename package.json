{
  "name": "skoly-auth",
  "version": "1.0.0",
  "description": "A modern, type-safe authentication library for Node.js applications with built-in CLI tools.",
  "main": "index.js",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "publish": "turbo run publish",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "publish-packages": "turbo run build && changeset publish",
    "version-packages": "changeset version",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skoly/skoly-auth.git"
  },
  "keywords": [
    "authentication",
    "npm",
    "open-source"
  ],
  "author": "Skoly <saiteja.g1801@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skoly/skoly-auth/issues"
  },
  "homepage": "https://github.com/skoly/skoly-auth#readme",
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.4.2",
    "turbo": "latest",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "packages/*"
  ]
